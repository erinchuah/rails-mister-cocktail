<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |d| %>
  <p>
  <%= d.description %>
  <%= d.ingredient.name %>
  <%= link_to "Delete", dose_path(d), method: :delete, data: { confirm: "Are you sure?"} %>
  <% end %>
  </p>

  <h3>Add an ingredient:</h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to all cocktails", cocktails_path %>
</div>
